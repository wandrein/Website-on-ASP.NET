@model IEnumerable<OdevD1.Models.Nufus>

@{
    ViewBag.Title = "Nüfus Bilgileri";
}

<div class="container mt-5">

    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="fw-bold">Nüfus İstatistikleri</h2>
            <p class="text-muted mb-0">Şehirlere göre yıllık nüfus bilgileri</p>
        </div>
        <div class="col-md-6 text-end">
            @if (User.Identity.Name == "f@f.com") 
            { 
                @Html.ActionLink(
                    "Yeni Nüfus Kaydı",
                    "Create",
                    null,
                    new { @class = "btn btn-success" }
                )}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">

                <div class="card-body">

                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-secondary">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Yil)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NufusMiktar)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sehirler.Isim)
                                </th>
                                @if (User.Identity.Name == "f@f.com") { 
                                    <th style="width:200px;">İşlemler</th> }
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-dark">
                                            @Html.DisplayFor(modelItem => item.Yil)
                                        </span>
                                    </td>

                                    <td>
                                        <strong>
                                            @Html.DisplayFor(modelItem => item.NufusMiktar)
                                        </strong>
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sehirler.Isim)
                                    </td>
                                    @if (User.Identity.Name == "f@f.com") { 
                                        <td>
                                            @Html.ActionLink(
                                                "Düzenle",
                                                "Edit",
                                                new { id = item.Id },
                                                new { @class = "btn btn-sm btn-warning me-1" }
                                            )

                                            @Html.ActionLink(
                                                "Detay",
                                                "Details",
                                                new { id = item.Id },
                                                new { @class = "btn btn-sm btn-info me-1" }
                                            )

                                            @Html.ActionLink(
                                                "Sil",
                                                "Delete",
                                                new { id = item.Id },
                                                new { @class = "btn btn-sm btn-danger" }
                                            )
                                        </td> }
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>

            </div>
        </div>
    </div>

</div>
